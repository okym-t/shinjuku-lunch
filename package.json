{
  "name": "remix-template-cloudflare-workers",
  "private": true,
  "description": "",
  "license": "",
  "sideEffects": false,
  "main": "build/index.js",
  "scripts": {
    "build": "remix build",
    "build:css": "tailwindcss -m -i ./styles/app.css -o app/styles/app.css",
    "deploy": "npm run build:css && npm run build && wrangler publish",
    "dev:remix": "remix watch",
    "dev:css": "tailwindcss -w -i ./styles/tailwind.css -o app/styles/tailwind.css",
    "dev:miniflare": "cross-env NODE_ENV=development miniflare ./build/index.js --watch",
    "dev": "concurrently \"npm run build\" \"run-p dev:*\"",
    "start": "cross-env NODE_ENV=production miniflare ./build/index.js"
  },
  "dependencies": {
    "@remix-run/cloudflare": "1.5.1",
    "@remix-run/cloudflare-workers": "1.5.1",
    "@remix-run/react": "1.5.1",
    "cross-env": "7.0.3",
    "react": "17.0.2",
    "react-dom": "17.0.2"
  },
  "devDependencies": {
    "@cloudflare/workers-types": "3.10.0",
    "@remix-run/dev": "1.5.1",
    "@remix-run/eslint-config": "1.5.1",
    "@types/react": "18.0.9",
    "@types/react-dom": "17.0.17",
    "autoprefixer": "10.4.7",
    "concurrently": "7.2.0",
    "eslint": "8.15.0",
    "miniflare": "2.4.0",
    "npm-run-all": "4.1.5",
    "postcss": "8.4.14",
    "tailwindcss": "3.0.24",
    "typescript": "4.6.4",
    "wrangler": "2.0.6"
  },
  "engines": {
    "node": ">=14"
  }
}
